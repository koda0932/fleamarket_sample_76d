.bgc-gray
  = render 'devise/shared/header'
  .user-new__main
    = form_for(@address, url: user_address_path) do |f|
      = render "devise/shared/error_messages", resource: @address
      .user-new__registration
        住所情報入力
      .user-new__container
        .user-new__field
          %label.user-new__field--text
            郵便番号
          %span.form-require
            必須
          = f.text_field :postcode, class: "user-new__field--input", placeholder: "例）〒123-0000"
        .user-new__field
          %label.user-new__field--text
            都道府県
          %span.form-require
            必須
          = f.text_field :prefecture, class: "user-new__field--input", placeholder: "例）東京都"
        .user-new__field
          %label.user-new__field--text
            市区町村
          %span.form-require
            必須
          = f.text_field :city, class: "user-new__field--input", placeholder: "例）大石市海渡区"
        .user-new__field
          %label.user-new__field--text
            番地
          %span.form-require
            必須
          = f.text_field :address, class: "user-new__field--input", placeholder: "例）大石1-1-1"
        .user-new__field
          %label.user-new__field--text
            送付先お名前(全角)
          %span.form-require
            必須
          .display-flex
            = f.text_field :apartment_family_name, class: "user-new__field--input user-new__field--half", placeholder: "例）大石"
            = f.text_field :apartment_first_name, class: "user-new__field--input user-new__field--half", placeholder: "例）海渡"
        .user-new__field
          %label.user-new__field--text
            送付先お名前カナ(全角)
          %span.form-require
            必須
          .display-flex
            = f.text_field :apartment_family_name_kana, class: "user-new__field--input user-new__field--half", placeholder: "例）オオイシ"
            = f.text_field :apartment_first_name_kana, class: "user-new__field--input user-new__field--half", placeholder: "例）カイト"
        .user-new__field
          %label.user-new__field--text
            建物名
          %span.form-any
            任意
          = f.text_field :apartment, class: "user-new__field--input", placeholder: "例）フォンティスビル101"
        .user-new__field
          %label.user-new__field--text
            電話番号
          %span.form-any
            任意
          = f.text_field :telephone, class: "user-new__field--input", placeholder: "例）0120117117"
        .user-new__field
          = f.submit class: "user-new__field--submit", value: "登録する"
  = render 'devise/shared/footer'
